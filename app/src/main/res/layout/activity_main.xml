<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#6984A1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#193336"
        android:fontFamily="monospace"
        android:text="BIENVENIDOS A EVERYTHING WORK"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#F9FEFE"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        android:visibility="visible" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:visibility="visible" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C7DFF9"
        android:fontFamily="monospace"
        android:text="¿Qué desea hacer el día de hoy?"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="italic"
        android:visibility="visible" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="525dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="525dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="45sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/binicia"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#193336"
                android:textColor="#F9FEFE"
                android:text="INICIA SESION"
                android:textSize="24dp"/>

            <ImageView
                android:layout_width="300dp"
                android:layout_height="155dp"
                android:id="@+id/INICIO"
                android:src="@drawable/choferr"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="55sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/bregistra"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#193336"
                android:textColor="#F9FEFE"
                android:text="REGISTRATE"
                android:textSize="24dp"/>

            <ImageView
                android:layout_width="300dp"
                android:layout_height="170dp"
                android:id="@+id/REGISTRO"
                android:src="@drawable/electronico"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="55sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/bconoce"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#193336"
                android:textColor="#F9FEFE"
                android:text="CONOCENOS"
                android:textSize="24dp"/>

            <ImageView
                android:layout_width="300dp"
                android:layout_height="170dp"
                android:id="@+id/CONOCER"
                android:src="@drawable/conocenos"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="55sp"
                android:visibility="visible" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#193336"
        android:fontFamily="monospace"
        android:text="Para más informacion contactanos con los siguientes contactos: \n Correo:information@Protip.com   Telefono:5587058727 \n Facebook:facebook.com/Protip   IP: 192.168.25.14"
        android:textAlignment="center"
        android:textColor="#F9FEFE"
        android:textSize="11sp"
        android:textStyle="bold|italic"
        android:visibility="visible" />

</LinearLayout>